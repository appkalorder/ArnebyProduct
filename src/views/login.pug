extends ./layouts/main

block header
  include ./components/head

block content
  section
    .container
      .block.loginform
        h1.sub-hero Iniciar Sesion
        form(name='login', action="/login", method="post")
          .field
            label(for='email') Tu email: 
            input#email(type='email', name='email', required='', placeholder='jhon@example.com')
          .field
            label(for='password') Tu contrase&ntilde;a: 
            input#password(type='password', name='password', required='', placeholder='*******')
          .field
            input.btn-dark(type='submit', value='Iniciar Sesion')

        if err
          p.notice.error #{err}
        if ok
          p.notice.success #{ok}
        
        p
          | &iquest;No tienes una cuenta? 
          a(target='_self', href='/register') Registrate Aqu&iacute;
        p
          a(target='_self', href='/forget-pass') Olvide mi contrase&ntilde;a


block footer
  include ./components/footer