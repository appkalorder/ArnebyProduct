extends ./layouts/main
block header
  include ./components/head

block content
  section
    .container
      .block.loginform
        h2.sub-hero Recupera tu Contrase&ntilde;a
        form(name='register', action="/forget-pass", method="post")
          .field
            label(for='password') Tu Nueva Contraseña: 
            input#user(type='password', name='password', required='', placeholder='*********')
          .field
            label(for='rep-password') Repite tu Contraseña: 
            input#user(type='password', name='rep-password', required='', placeholder='*********')
          .field
            input.btn-dark(type='submit', value='Establecer Contraseña')
        p
          | &iquest;No tienes una cuenta? 
          a(target='_self', href='./register') Registrate Aqu&iacute;